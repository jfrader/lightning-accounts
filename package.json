{
  "name": "lightning-accounts",
  "version": "3.1.0",
  "description": "REST API For hosting custodial lightning accounts",
  "repository": "https://github.com/jfrader/lightning-accounts.git",
  "main": "dist/index.js",
  "author": "Fran <jfrader.com>",
  "license": "MIT",
  "keywords": [
    "bitcoin",
    "lightning",
    "satoshi",
    "api",
    "accounts",
    "integration"
  ],
  "files": [
    "node_modules/.prisma/client/*",
    "node_modules/form-data/*",
    "dist/index.d.ts",
    "dist/index.js",
    "dist/index.js.map",
    "dist/swagger.json"
  ],
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build": "yarn swagger:generate && rimraf build && tsc -p tsconfig.json && cp -R src/static build/src/",
    "start": "nodemon",
    "start:e2e": "dotenv -e .env.test -- prisma db push --force-reset && dotenv -e .env.test -- prisma db seed && dotenv -e .env.test -- nodemon",
    "start:migrate": "prisma db push && prisma db seed && yarn start",
    "start:prod": "node bin/lightning-accounts-server",
    "start:prod:migrate": "prisma migrate deploy && yarn start:prod",
    "lightning:payinvoice": "sudo docker compose exec -i --user lnd carol lncli -n regtest payinvoice",
    "docker": "docker compose --env-file .env up --build --abort-on-container-exit",
    "docker:exec": "docker compose exec -i server yarn",
    "docker:prod": "docker compose -f docker-compose.prod.yml --env-file .env up --build",
    "docker:staging": "docker compose -f docker-compose.staging.yml --env-file .env up --build",
    "docker:test": "docker compose -f docker-compose.e2e.yml --env-file .env.test up --build --abort-on-container-exit",
    "swagger:specs": "yarn prisma generate && cross-env NODE_ENV=development ts-node scripts/prismaToSwagger.ts && cross-env NODE_ENV=development ts-node scripts/swaggerToJson.ts",
    "swagger:client": "yarn swagger:specs && yarn swagger-typescript-api -p ./dist/swagger.json -o ./dist -n index.ts --axios",
    "swagger:generate": "yarn swagger:client && tsc -p tsconfig.dist.json",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "prepare": "husky install",
    "prepublishOnly": "yarn swagger:generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@jest/globals": "^29.3.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.13",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/xss-filters": "^0.0.27",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "node-mocks-http": "^1.12.1",
    "nodemon": "^3.0.3",
    "prettier": "^2.8.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-typescript-api": "^13.0.3",
    "swagger-ui-express": "^4.6.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@openapi-contrib/json-schema-to-openapi-schema": "^3.0.2",
    "@prisma/client": "^5.7.1",
    "@superfaceai/passport-twitter-oauth2": "1.2.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/express-session": "^1.17.10",
    "@types/joi": "^17.2.3",
    "@types/js-yaml": "^4.0.9",
    "@types/nodemailer": "^6.4.7",
    "@types/swagger2openapi": "^7.0.4",
    "axios": "^1.6.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.18.0",
    "form-data": "^4.0.0",
    "helmet": "^6.0.1",
    "http-status": "^1.5.3",
    "install": "^0.13.0",
    "joi": "^17.12.0",
    "js-yaml": "^4.1.0",
    "lightning": "^10.2.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.9",
    "npm": "^10.4.0",
    "passport": "^0.7.0",
    "passport-cookie": "^1.0.9",
    "passport-jwt": "^4.0.0",
    "prisma-json-schema-generator": "^5.1.1",
    "swagger2openapi": "^7.0.8",
    "winston": "^3.8.2",
    "xss-filters": "^1.2.7"
  },
  "peerDependencies": {
    "axios": "^1.6.3",
    "form-data": "^4.0.0"
  }
}
