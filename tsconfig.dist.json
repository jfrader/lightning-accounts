{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "./dist",
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "files": ["dist/index.ts"],
  "exclude": ["dist/**/*", "scripts/**/*", "build/**/*"]
}
