generator client {
  provider = "prisma-client-js"
}

generator jsonSchema {
  provider              = "prisma-json-schema-generator"
  output                = "./"
  includeRequiredFields = "true"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int          @id @default(autoincrement())
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  email               String?      @unique
  password            String?
  twitterId           String?      @unique
  twitter             String?
  nostrPubkey         String?      @unique
  avatarUrl           String?
  name                String
  role                Role         @default(USER)
  isEmailVerified     Boolean      @default(false)
  payRequestsCreated  PayRequest[] @relation("creator")
  payRequestsReceived PayRequest[] @relation("receiver")
  Token               Token[]
  wallet              Wallet?
}

model Token {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  token       String
  type        TokenType
  expires     DateTime
  blacklisted Boolean
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model Wallet {
  id            Int           @id @default(autoincrement())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  userId        Int           @unique
  balanceInSats Int
  disabled      Boolean       @default(false)
  busy          Boolean       @default(false)
  transactions  Transaction[]
  user          User          @relation(fields: [userId], references: [id])
}

model PayRequest {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  receiverId   Int
  creatorId    Int
  amountInSats Int
  description  String        @default("")
  meta         Json?
  paid         Boolean       @default(false)
  creator      User          @relation("creator", fields: [creatorId], references: [id])
  receiver     User          @relation("receiver", fields: [receiverId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id             Int             @id @default(autoincrement())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  walletId       Int
  amountInSats   Int
  type           TransactionType
  description    String?
  walletImpacted Boolean         @default(false)
  invoiceSettled Boolean?
  invoice        Json?
  payRequestId   Int?
  payRequest     PayRequest?     @relation(fields: [payRequestId], references: [id])
  wallet         Wallet          @relation(fields: [walletId], references: [id])
}

enum TransactionType {
  SEND
  RECEIVE
  WITHDRAW
  DEPOSIT
}

enum Role {
  USER
  ADMIN
  APPLICATION
}

enum TokenType {
  ACCESS
  REFRESH
  IDENTITY
  RESET_PASSWORD
  VERIFY_EMAIL
  APPLICATION
}
